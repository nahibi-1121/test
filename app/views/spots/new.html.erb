<h1>新規投稿フォーム</h1>
<%= form_with model: @spot, local:true do |f| %>
　<h4>国内or海外</h4>
  <%= f.select :area, [["国内", "国内"], ["海外", "海外"]], include_blank: "選択して下さい" %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>スポット名</h4>
  <%= f.text_field :spot_name %>
  <h4>キャプション</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>
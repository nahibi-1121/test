<main>
  <p id="notice"><%= flash[:success] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
        <table class='table'>
          <tr>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %> <!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>  <!-- 固定値 -->
          </tr>
        </table>
        <div class='row'>
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
           <span class="fas fa-user-cog"></span>
          <% end %>
        </div>

        <div class='row'>
          <%= link_to new_spot_path, class: "btn btn-primary btn-block" do %>
           <span>新規投稿</span>
          <% end %>
        </div>

      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Spot detail</h2>
        <table class='table'>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "default-image.jpg" %><br><%= @user.name %>
                <% end %>
              </td>
              <td>
                 <%= attachment_image_tag @spot, :image , width: 220, height: 160,
                    class: "img-resize, rounded mx-auto d-block",
                    style: "object-fit: cover;" %>
              </td>
              <td>
                 <%= @spot.spot_name %>
              </td>
              <td>
                 <%= @spot.caption %>
              </td>
              <% if @spot.user == current_user %>
              <td>
                <%= link_to "Edit", edit_spot_path(@spot), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                 <%= link_to "Destroy", spot_path(@spot), method: :delete, data: {confirm: "本当に消しますか?"}, class: "btn btn-sm btn-danger" %>
              </td>
              <% else %>
              <td></td>
              <td></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
